<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/layout_widget_quick_control_container" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:layout_gravity="center" android:id="@+id/widget_background" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/background_widget"/>
    <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:minWidth="@dimen/widget_portrait_layout_min_width" android:minHeight="@dimen/widget_portrait_layout_min_height">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginStart="5dp" android:layout_marginEnd="5dp">
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="@dimen/widget_portrait_device_bt_name_text_size" android:ellipsize="end" android:gravity="bottom|center_vertical|center_horizontal|center" android:layout_gravity="center" android:id="@+id/widget_text_device_bt_name" android:focusable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:paddingStart="10dp" android:paddingEnd="10dp" style="@style/WidgetTitleShadowTextAppearance"/>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="7dp">
                <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/switch_widget_quick_control_option_1" android:layout_width="@dimen/widget_portrait_quick_settings_switch_layout_width" android:layout_height="wrap_content" android:layout_weight="1">
                    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
                        <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="10"/>
                        <ImageView android:id="@+id/image_widget_quick_control_option_1" android:layout_width="match_parent" android:layout_height="wrap_content" android:adjustViewBounds="true" android:layout_weight="7"/>
                        <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="10"/>
                    </LinearLayout>
                    <TextView android:textSize="@dimen/widget_portrait_master_title_text_size" android:textColor="@color/widget_title_color_style_black" android:ellipsize="end" android:gravity="center_horizontal" android:id="@+id/text_widget_quick_control_option_1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:lines="2" android:importantForAccessibility="no" style="@style/WidgetShadowTextAppearance"/>
                </LinearLayout>
                <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="19dp" android:layout_height="match_parent" android:layout_weight="1">
                    <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_weight="4"/>
                    <ImageView android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/divider" android:layout_weight="2"/>
                    <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_weight="3"/>
                </LinearLayout>
                <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/switch_widget_quick_control_option_2" android:layout_width="@dimen/widget_portrait_quick_settings_switch_layout_width" android:layout_height="wrap_content" android:layout_weight="1">
                    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
                        <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="10"/>
                        <ImageView android:id="@+id/image_widget_quick_control_option_2" android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@drawable/widget_lock_touchpad_on" android:adjustViewBounds="true" android:layout_weight="7"/>
                        <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="10"/>
                    </LinearLayout>
                    <TextView android:textSize="@dimen/widget_portrait_master_title_text_size" android:textColor="@color/widget_title_color_style_black" android:ellipsize="end" android:gravity="center_horizontal" android:id="@+id/text_widget_quick_control_option_2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/settings_touchpad_menu1" android:lines="2" android:importantForAccessibility="no" style="@style/WidgetShadowTextAppearance"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
