<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/layout_widget_quick_control_container" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:layout_gravity="center" android:id="@+id/widget_background" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/background_widget"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="match_parent" android:minWidth="@dimen/widget_landscape_layout_min_width" android:minHeight="@dimen/widget_landscape_layout_min_height" android:paddingStart="8dp" android:paddingEnd="8dp">
            <TextView android:textSize="@dimen/widget_landscape_device_bt_name_text_size" android:ellipsize="end" android:gravity="center" android:id="@+id/widget_text_device_bt_name" android:focusable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="2" android:includeFontPadding="false" android:layout_weight="3" style="@style/WidgetTitleTextAppearance"/>
            <LinearLayout android:gravity="left|center_vertical|center_horizontal|center|start" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
                <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/switch_widget_quick_control_option_1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1" android:soundEffectsEnabled="false">
                    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="17">
                        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="2"/>
                        <ImageView android:id="@+id/image_widget_quick_control_option_1" android:layout_width="match_parent" android:layout_height="match_parent" android:adjustViewBounds="true" android:layout_weight="1"/>
                        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="2"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="horizontal" android:paddingTop="2dp" android:paddingBottom="2dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="10">
                        <TextView android:textSize="@dimen/widget_landscape_master_title_text_size" android:textColor="@color/widget_title_color_style_black" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/text_widget_quick_control_option_1" android:layout_width="match_parent" android:layout_height="wrap_content" android:lines="2" android:includeFontPadding="false" android:importantForAccessibility="no" android:textDirection="locale"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:layout_width="2dp" android:layout_height="match_parent">
                    <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_weight="10"/>
                    <ImageView android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/divider" android:layout_weight="7"/>
                    <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_weight="10"/>
                </LinearLayout>
                <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/switch_widget_quick_control_option_2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="17">
                        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="2"/>
                        <ImageView android:id="@+id/image_widget_quick_control_option_2" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/widget_lock_touchpad_on" android:adjustViewBounds="true" android:layout_weight="1"/>
                        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="2"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="horizontal" android:paddingTop="2dp" android:paddingBottom="2dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="10">
                        <TextView android:textSize="@dimen/widget_landscape_master_title_text_size" android:textColor="@color/widget_title_color_style_black" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/text_widget_quick_control_option_2" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/settings_touchpad_menu1" android:lines="2" android:includeFontPadding="false" android:importantForAccessibility="no" android:textDirection="locale"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
