<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="16dp" android:layout_marginStart="24dp" android:layout_marginEnd="24dp">
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/divider">
        <TextView android:textSize="17sp" android:textColor="#252525" android:id="@+id/explantion" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/sysytemlogpopupdec" android:fontFamily="sec-roboto-light"/>
    </ScrollView>
    <View android:id="@+id/divider" android:background="#efefef" android:layout_width="match_parent" android:layout_height="2px" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:layout_above="@+id/radiogroup"/>
    <RadioGroup android:orientation="vertical" android:id="@+id/radiogroup" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/popup_button_layout" android:backgroundTint="#32c1e8">
        <RadioButton android:textSize="18dp" android:id="@+id/alwaystake" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/always" android:buttonTint="#32c1e8"/>
        <RadioButton android:textSize="18dp" android:id="@+id/justthistime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/just_this_time" android:buttonTint="#32c1e8"/>
    </RadioGroup>
    <LinearLayout android:gravity="end" android:orientation="horizontal" android:id="@+id/popup_button_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginBottom="16dp" android:layout_alignParentBottom="true">
        <TextView android:textSize="15dp" android:textStyle="bold" android:textColor="#32c1e8" android:id="@+id/cancel_btn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="CANCEL" android:textAllCaps="true" android:fontFamily="sec-roboto-condensed"/>
        <TextView android:textSize="15dp" android:textStyle="bold" android:textColor="#32c1e8" android:id="@+id/ok_btn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="OK" android:textAllCaps="true" android:fontFamily="sec-roboto-condensed" android:layout_marginStart="32dp"/>
    </LinearLayout>
</RelativeLayout>
