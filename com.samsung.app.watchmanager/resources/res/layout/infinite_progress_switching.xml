<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/navigationbar_color_dark" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:id="@+id/action_bar_layout" android:background="@color/daynight_dark_theme_background" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="56dp" android:layout_alignParentTop="true" android:paddingStart="20dp">
        <ImageView android:layout_gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/navigation_icon_view" android:background="@drawable/ic_tw_ic_ab_drawer_mtrl" android:layout_width="24dp" android:layout_height="24dp" android:scaleType="fitXY" android:layout_marginEnd="12dp"/>
        <ImageView android:layout_gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/watch_logo_view" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/gm_ab_logo_wearable" android:scaleType="fitXY"/>
        <TextView android:textSize="@dimen/action_bar_title_font_size" android:textStyle="bold" android:textColor="#fafafa" android:ellipsize="end" android:layout_gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/tvActionTitle" android:visibility="gone" android:fadingEdge="horizontal" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:singleLine="true" android:fontFamily="sec-roboto-condensed"/>
    </LinearLayout>
    <ProgressBar android:layout_width="match_parent" android:layout_height="2dp" android:indeterminate="true" android:layout_below="@+id/action_bar_layout" style="@style/setupProgressBar"/>
    <ImageView android:id="@+id/icon" android:layout_width="60dp" android:layout_height="60dp" android:layout_centerInParent="true"/>
    <TextView android:textSize="15dp" android:textColor="@color/text_color_pulse" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="@string/loading" android:layout_below="@+id/icon" android:layout_centerInParent="true"/>
</RelativeLayout>
