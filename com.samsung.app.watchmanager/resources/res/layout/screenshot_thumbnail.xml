<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="73dp">
    <LinearLayout android:orientation="horizontal" android:background="@drawable/screenshot_listitem_background" android:clipChildren="false" android:layout_width="match_parent" android:layout_height="63dp" android:layout_marginBottom="10dp">
        <RelativeLayout android:layout_width="47dp" android:layout_height="47dp" android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp">
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/thumbnailImageView" android:background="@drawable/thumnailbackground" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop"/>
        </RelativeLayout>
        <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:textColor="#252525" android:id="@+id/fileName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="File_name.ext" android:fontFamily="sec-roboto-light" android:textAlignment="viewStart"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_gravity="center_vertical" android:id="@+id/videoPlayImage" android:visibility="gone" android:layout_width="13dp" android:layout_height="13dp" android:tint="#ff6b6f72" android:layout_marginEnd="3dp"/>
                <TextView android:textColor="#858585" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/fileSize" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="size_kb" android:fontFamily="sec-roboto-light"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView android:layout_gravity="right|center_vertical|center_horizontal|center|end" android:id="@+id/removeButton" android:layout_width="26dp" android:layout_height="26dp" android:src="@drawable/tw_list_icon_miuns" android:layout_marginStart="10dp" android:layout_marginEnd="15dp"/>
    </LinearLayout>
</RelativeLayout>
