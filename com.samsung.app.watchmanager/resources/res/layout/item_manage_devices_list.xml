<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/item_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:id="@+id/item_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="18dp" android:paddingEnd="24dp">
        <CheckBox android:layout_gravity="center_vertical" android:id="@+id/item_checkbox" android:background="@drawable/manager_checkbox_selector" android:focusable="false" android:clickable="false" android:layout_width="32dp" android:layout_height="32dp" android:button="@null" android:layout_alignParentStart="true"/>
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/item_image" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginTop="15dp" android:layout_marginBottom="15dp" android:src="@drawable/oobe_drawer_ic_watch" android:layout_marginStart="18dp"/>
        <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:paddingTop="11dp" android:paddingBottom="11dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="12dp">
            <TextView android:id="@+id/device_item_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="false" android:fontFamily="sec-roboto-regular" style="@style/TextView_ListDescFirstLine"/>
            <TextView android:id="@+id/device_connection_status" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/TextView_deviceStatus"/>
        </LinearLayout>
    </LinearLayout>
    <View android:id="@+id/divider" android:background="#d4d4d4" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="@dimen/actionbar_divider" android:layout_below="@+id/item_view" android:alpha="0.15" android:layout_marginStart="68dp" android:layout_marginEnd="24dp"/>
</RelativeLayout>
