<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:background="#e6e6e6" android:layout_width="match_parent" android:layout_height="@dimen/actionbar_divider"/>
    <LinearLayout android:gravity="center" android:layout_gravity="center_horizontal" android:orientation="vertical" android:id="@+id/no_feedbacks" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent">
        <ImageView android:layout_gravity="top|center_vertical|center_horizontal|center" android:layout_width="48dp" android:layout_height="48dp" android:layout_marginBottom="4dp" android:src="@drawable/samsung_members_ic_reply" android:tint="#000000" android:alpha="0.2"/>
        <TextView android:textSize="16sp" android:textColor="#252525" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="48dp" android:text="@string/no_feedback" android:alpha="0.4" android:fontFamily="sec-roboto-light"/>
        <TextView android:textSize="14sp" android:textColor="#252525" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="48dp" android:text="@string/after_post_they_appear" android:alpha="0.4" android:fontFamily="sec-roboto-light"/>
    </LinearLayout>
    <ListView android:scrollbarStyle="outsideOverlay" android:id="@+id/feedback_listview" android:layout_width="match_parent" android:layout_height="wrap_content" android:divider="@null"/>
</LinearLayout>
